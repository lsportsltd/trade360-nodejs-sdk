{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@feed": ["src/feed"],
      "@feed/*": ["src/feed/*"],
      "@lsports/entities": ["src/entities/core-entities/index.ts"],
      "@lsports/entities/common": ["src/entities/core-entities/common/index.ts"],
      "@lsports/entities/*": ["src/entities/core-entities/*"],
      "@lsports/enums": ["src/entities/core-entities/enums"],
      "@lsports/decorators": ["src/entities/decorators"],
      "@lsports/errors": ["src/entities/errors"],
      "@api": ["src/api"],
      "@api/*": ["src/api/*"],
      "@customers-api": ["src/api/customers-api"],
      "@customers-api/*": ["src/api/customers-api/*"],
      "@metadata-api": ["src/api/common/metadata"],
      "@metadata-api/*": ["src/api/common/metadata/*"],
      "@subscription-api": ["src/api/common/subscription"],
      "@subscription-api/*": ["src/api/common/subscription/*"],
      "@httpClient": ["src/api/base-http-client"],
      "@httpClient/*": ["src/api/base-http-client/*"],
      "@utilities": ["src/utilities"],
      "@logger": ["src/logger"]
    }
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist", "sample"]
}
